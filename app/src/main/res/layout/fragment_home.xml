                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/backButton" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/tomButton"
                    android:layout_width="56dp"
                    android:layout_height="60dp"
                    android:padding="0sp"
                    android:layout_marginLeft="50dp"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/twsomeButton"
                    app:layout_constraintTop_toBottomOf="@+id/hollysButton"
                    app:srcCompat="@drawable/tomntoms" />
                <ImageButton
                    android:id="@+id/twsomeButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:padding="0sp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/angelButton"
                    app:srcCompat="@drawable/twosome" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/jalnan"
                    android:text="탐앤탐스"
